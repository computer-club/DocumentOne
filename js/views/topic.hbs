<table class="table table-striped table-bordered table-hover">
 <thead>
  <tr>
   <td style="width:125px">User</td>
   <td>Content</td>
  </tr>
 </thead>
 <tbody>
  {{#each topic.Posts.Post}}
  <tr>
   <td style="width:125px">
    <a href="/User/{{this.UserSerial}}">{{this.Username}}</a>
   </td>
   <td>
    <div class="row-fluid">
     <div class="span10">
      <strong>{{this.Subject}}</strong>
     </div>
     <div class="span2" style="text-align:right">
     {{#if ../loggedIn}}
      <button class="btn btn-mini" disabled>Quote</button>
      <a href="#reply">
       <button class="btn btn-mini">Reply</button>
      </a>
     {{/if}}
     </div>
    </div>
    <hr style="margin: 5px 0" />
    {{this.Content}}
   </td>
  </tr>
  {{/each}}
 </tbody>
</table>

{{#if loggedIn}}
<a name="reply"></a>
<div style="background-color:#f9f9f9;border-radius:4px;border: 1px solid #ddd">
 <div style="padding:20px;">
  <form action="/Post" method="post" style="margin-bottom:0px">
   <input type="text" name="Subject" style="width:100%;height:30px;box-sizing:border-box"
     placeholder="Subject" value="{{topic.Subject}}"></input>
   <textarea name="Content" rows=7 style="width:100%;box-sizing:border-box;resize:none"
     placeholder="Content"></textarea>
   <input type="hidden" name="TopicSerial" value="{{topic.Serial}}"></input>
   <center>
    <button class="btn btn-large btn-success" type="submit">Post Reply</button>
   </center>
  </form>
 </div>
</div>
{{/if}}
